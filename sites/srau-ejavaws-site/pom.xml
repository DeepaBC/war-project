<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ejava.sites</groupId>
        <artifactId>sites</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <artifactId>srau-ejavaws-site</artifactId>
    <packaging>war</packaging>

    <name>SRA-U Developing RESTful Web Services with Java Site</name>
    <description>
        This course provides a an implementation focus on developing 
        Level 2 and 3 Web Services (as defined by Leonard Richardson)
        using Git, Maven 3, JUnit, Jetty, HttpClient, JBoss AS 7, Spring 3.x, 
        JAX-RS, JAXB, JBoss RESTEasy, and Eclipse.
    </description>

    <scm>
        <url>http://ejava.info/gitweb/ejava-ws</url>
        <connection>scm:http://ejava.info/git/ejava-ws</connection>
    </scm>

    <ciManagement>
        <system>jenkins</system>
        <url>http://ejava.info/jenkins/job/ejava-ws-master/</url>
    </ciManagement>

    <distributionManagement>
        <site>
            <id>ejava.website</id>
            <name>ejava website</name>
            <url>${ejava.scp.root}/ejava-ws</url>
        </site>
    </distributionManagement>

    <developers>
        <developer>
            <id>jcstaff</id>
            <name>Jim Stafford</name>
            <email>jcstaff@apl.jhu.edu</email>
            <url>http://www.apl.jhu.edu/~jcstaff</url>
            <organization>SRA International</organization>
            <organizationUrl>http://www.sra.com</organizationUrl>
            <timezone>-4</timezone>
            <roles>
                <role>Instructor</role>
                <role>Author</role>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>ejava.coursedocs</groupId>
            <artifactId>courseintro-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ejava.coursedocs</groupId>
            <artifactId>dmv-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ejava.coursedocs</groupId>
            <artifactId>webarch-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ejava.restintro</groupId>
            <artifactId>crud-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ejava.restintro</groupId>
            <artifactId>hypermedia-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ejava.restintro</groupId>
            <artifactId>restdev-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ejava.jaxrscs</groupId>
            <artifactId>jaxrs-resources-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>ejava.exercises</groupId>
            <artifactId>devenv-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ejava.exercises</groupId>
            <artifactId>restdev-ex-docbook</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <version>2.2</version>
            <executions>
                <execution>
                    <phase>pre-site</phase>
                    <goals>
                        <goal>war</goal>
                    </goals>
                </execution>
            </executions>
            <configuration>
              <overlays>
                <overlay>
                  <groupId>ejava.coursedocs</groupId>
                  <artifactId>courseintro-docbook</artifactId>
                  <type>war</type>
                  <targetPath>../site/docs/intro/courseintro</targetPath>
                </overlay>
                <overlay>
                    <groupId>ejava.coursedocs</groupId>
                    <artifactId>dmv-docbook</artifactId>
                    <type>war</type>
                    <targetPath>../site/docs/intro/dmv</targetPath>
                </overlay>
                <overlay>
                    <groupId>ejava.coursedocs</groupId>
                    <artifactId>webarch-docbook</artifactId>
                    <type>war</type>
                    <targetPath>../site/docs/intro/webarch</targetPath>
                </overlay>
                <overlay>
                    <groupId>ejava.restintro</groupId>
                    <artifactId>crud-docbook</artifactId>
                    <type>war</type>
                    <targetPath>../site/docs/intro/crud</targetPath>
                </overlay>
                <overlay>
                    <groupId>ejava.restintro</groupId>
                    <artifactId>hypermedia-docbook</artifactId>
                    <type>war</type>
                    <targetPath>../site/docs/intro/hypermedia</targetPath>
                </overlay>
                <overlay>
                    <groupId>ejava.restintro</groupId>
                    <artifactId>restdev-docbook</artifactId>
                    <type>war</type>
                    <targetPath>../site/docs/intro/restdev</targetPath>
                </overlay>
                <overlay>
                    <groupId>ejava.jaxrscs</groupId>
                    <artifactId>jaxrs-resources-docbook</artifactId>
                    <type>war</type>
                    <targetPath>../site/docs/jaxrs/jaxrs-resources</targetPath>
                </overlay>


                <overlay>
                    <groupId>ejava.exercises</groupId>
                    <artifactId>devenv-docbook</artifactId>
                    <type>war</type>
                    <targetPath>../site/docs/exercises/devenv</targetPath>
                </overlay>
                <overlay>
                    <groupId>ejava.exercises</groupId>
                    <artifactId>restdev-ex-docbook</artifactId>
                    <type>war</type>
                    <targetPath>../site/docs/exercises/restdev-ex</targetPath>
                </overlay>
              </overlays>
            </configuration>
          </plugin>
        </plugins>
    </build>
</project>
