<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
      <groupId>ejava.ws.archetype</groupId>
      <artifactId>ear6</artifactId>
      <version>1.0-SNAPSHOT</version>
      <relativePath>..</relativePath>
  </parent>
  
  <artifactId>ear6-it</artifactId>

  <name>JAX-RS as JavaEE 6 EAR.IT</name>
  
  <dependencies>
      <!-- required dependency for cargo deployer-->
      <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>ear6-ear</artifactId>
          <version>${project.version}</version>
          <type>ear</type>
          <scope>test</scope>
      </dependency>

      <!-- using business interfaces in EJB.jar -->
      <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>ear6-ejb</artifactId>
          <version>${project.version}</version>
          <type>jar</type>
          <scope>test</scope>
      </dependency>
      
      <!-- extended base unit test classes -->
      <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>ear6-ejb</artifactId>
          <version>${project.version}</version>
          <classifier>tests</classifier>
          <scope>test</scope>
      </dependency>

      <!-- using HttpClient utilities -->
      <dependency>
          <groupId>ejava.ws</groupId>
          <artifactId>ejava-rs-util</artifactId>
          <version>${project.version}</version>
          <scope>test</scope>
      </dependency>
      <!-- needed for javax.xml.rpc.handler.MessageContext -->        
      <dependency>
          <groupId>javax.xml</groupId>
          <artifactId>jaxrpc</artifactId>
          <scope>test</scope>
      </dependency>
      <!--  needed for javax.transaction.UserTransaction -->
      <dependency>
          <groupId>javax.transaction</groupId>
          <artifactId>transaction-api</artifactId>
          <scope>test</scope>
      </dependency>
      <!-- needed for classes referenced by unit tests -->
      <dependency>
          <groupId>org.jboss.spec.javax.ejb</groupId>
          <artifactId>jboss-ejb-api_3.1_spec</artifactId>
          <scope>test</scope>
      </dependency>
      
  </dependencies>

  <build>
      <plugins>
            <!-- JBoss-specific way to deploy and undeploy application 
            <plugin>
                <groupId>org.jboss.as.plugins</groupId>
                <artifactId>jboss-as-maven-plugin</artifactId>
                <configuration>
                    <hostname>${jboss7.mgmt.host}</hostname>
                    <port>${jboss7.mgmt.port}</port>
                    <filename>../../ear6-ear/target/ear6-ear-${project.version}.ear</filename>
                </configuration>
                <executions>
                   <execution>
                       <id>deploy</id> 
                       <phase>pre-integration-test</phase>
                       <goals>
                           <goal>deploy</goal>
                       </goals>
                   </execution>
                    <execution>
                        <id>undeploy</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>undeploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            -->

            <!-- More generic way to deploy and undeploy the application -->
            <plugin>
                <groupId>org.codehaus.cargo</groupId>
                <artifactId>cargo-maven2-plugin</artifactId>
                <configuration>
                    <deployer>
                        <type>remote</type>
                        <!-- define dependencies to deploy from M2_REPO -->
                        <deployables>
                            <deployable>
                                <groupId>${project.groupId}</groupId>
                                <artifactId>ear6-ear</artifactId>
                                <type>ear</type>
                            </deployable>
                        </deployables>
                    </deployer>
                </configuration>
            </plugin>
      </plugins>
  </build>
</project>
